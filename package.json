{
  "name": "typescript-node-starter-project",
  "version": "0.1.0",
  "description": "TypeScript Node.js starter",
  "main": "./dist/main.js",
  "exports": "./dist/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "node ./dist/main.js",
    "prebuild": "run-s format check clean",
    "build": "tsc",
    "clean": "shx rm -rf ./dist",
    "check": "tsc --noEmit",
    "dev": "tsx watch src/main.ts",
    "debug": "tsx watch --inspect-wait src/main.ts",
    "format": "biome format --write ./src",
    "pretest": "run-s clean build",
    "test": "jest './dist/'",
    "test:coverage": "npm run test -- --coverage",
    "up": "pnpm update --latest"
  },
  "keywords": [],
  "author": "Rajinder Yadav <devguy.ca@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rajinder-yadav/typescript-node-starter"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "biome": "^0.3.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.4.0",
    "tsx": "^4.19.3"
  },
  "dependencies": {
    "typescript": "^5.8.2"
  }
}
